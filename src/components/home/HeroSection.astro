---
import SiteData from "@/constants/siteData.json";
import CinematicGrid from "./CinematicGrid.astro";
import { Icon } from "astro-icon/components";

const skills = [
  {
    icon: "ph:code-bold",
    label: "Frontend Development",
    color: "blue",
    delay: 0
  },
  {
    icon: "ph:database-bold",
    label: "Backend Architecture",
    color: "green",
    delay: 0.1
  },
  {
    icon: "ph:paint-brush-bold",
    label: "UI/UX Design",
    color: "purple",
    delay: 0.2
  }
];
---

<div class="hero-section">
  <CinematicGrid />
  <div class="hero-container">
    <div class="hero-content">
      <h1 class="hero-title">
        {SiteData.personal.tagline}
      </h1>
      <p class="hero-description">
        {SiteData.personal.shortDescription}
      </p>
      <div class="hero-cta">
        <a href={SiteData.personal.calendlyUrl} class="cta-button">
          <span class="cta-text">
            Book a free meeting
            <Icon name="ph:arrow-right-bold" class="cta-icon" />
          </span>
        </a>
        <div class="cta-background"></div>
      </div>
    </div>
    <div class="skills-grid">
      {
        skills.map(({ icon, label, color }) => (
          <div transition:name={label} class="skill-card">
            <div class="skill-background" />
            <Icon name={icon} class={`skill-icon skill-icon-${color}`} />
            <h3 class="skill-label">{label}</h3>
            <p class="skill-description">
              Delivering robust solutions with modern technologies and best
              practices.
            </p>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .hero-section {
    position: relative;
    width: 100%;
    background-color: black;
  }

  @media (min-width: 768px) {
    .hero-section {
      padding-top: 5rem;
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }

  .hero-container {
    max-width: 72rem;
    margin: 0 auto;
  }

  .hero-content {
    margin-bottom: 4rem;
    text-align: center;
  }

  .hero-title {
    margin-bottom: 1.5rem;
    background: linear-gradient(to right, white, white 70%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-size: 2.5rem;
    font-weight: bold;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 4rem;
    }

    @media (min-width: 1024px) {
      .hero-title {
        font-size: 4.5rem;
      }
    }
  }

  .hero-description {
    max-width: 42rem;
    margin: 0 auto;
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.6);
  }

  .hero-cta {
    margin-top: 2rem;
    display: flex;
    justify-content: center;
  }

  .cta-button {
    position: relative;
    overflow: hidden;
    border-radius: 9999px;
    background-color: white;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
    color: black;
    transition: all 0.3s;
  }

  .cta-text {
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cta-icon {
    transition: transform 0.3s;
    font-weight: bold;
  }

  .cta-button:hover .cta-icon {
    transform: translateX(0.25rem);
  }

  .cta-background {
    position: absolute;
    inset: 0;
    transform: translateY(100%);
    background: linear-gradient(to right, blue, purple);
    opacity: 0;
    transition: all 0.3s;
    z-index: 0;
  }

  .cta-button:hover .cta-background {
    transform: translateY(0);
    opacity: 0.1;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .skills-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .skill-card {
    position: relative;
    border-radius: 1rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(255, 255, 255, 0.05);
    padding: 1.5rem;
    backdrop-filter: blur(4px);
    transition: all 0.3s;
  }

  .skill-card:hover {
    border-color: rgba(255, 255, 255, 0.2);
    background-color: rgba(255, 255, 255, 0.07);
  }

  .skill-background {
    position: absolute;
    inset: 0;
    border-radius: 1rem;
    background: linear-gradient(
      to bottom,
      transparent,
      rgba(255, 255, 255, 0.02)
    );
    opacity: 0;
    transition: opacity 0.3s;
  }

  .skill-card:hover .skill-background {
    opacity: 1;
  }

  .skill-icon {
    margin-bottom: 1rem;
    width: 2rem;
    height: 2rem;
  }

  .skill-icon-blue {
    color: #60a5fa;
  }
  .skill-icon-green {
    color: #4ade80;
  }
  .skill-icon-purple {
    color: #a78bfa;
  }

  .skill-label {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: white;
  }

  .skill-description {
    color: rgba(255, 255, 255, 0.6);
  }
</style>
