---
import { Icon } from "astro-icon/components";
import SocialLinks from "@/constants/socials";
---

<footer
  class="relative mx-auto flex items-center justify-center bg-black p-5 text-white shadow-md"
>
  <nav class="flex items-center">
    <a
      class="pr-4 opacity-70 transition-all hover:underline hover:opacity-100"
      href={SocialLinks.mail.url}
      title={SocialLinks.mail.title}>Email</a
    >
    <a
      class="px-4 opacity-70 transition-all hover:underline hover:opacity-100"
      href={SocialLinks.linkedin.url}
      title={SocialLinks.linkedin.title}>Linkedin</a
    >
    <a
      class="px-4 opacity-70 transition-all hover:underline hover:opacity-100"
      href={SocialLinks.github.url}
      title={SocialLinks.github.title}>Github</a
    >
    <button
      onclick="scrollToTop()"
      class="mx-4 flex items-center gap-1 rounded-full p-2 opacity-70 transition-all hover:bg-white/10 hover:underline hover:opacity-100"
    >
      <Icon name="ph:caret-up-bold" class="h-7 w-7 hover:stroke-2" />
    </button>
  </nav>
</footer>

<script is:inline>
  // eslint-disable-next-line @typescript-eslint/no-unused-vars
  function scrollToTop() {
    window.scrollTo({
      top: 0,
      behavior: "smooth"
    });
  }
</script>
